@page
@model RestoStockWeb.Pages.Ingredientes.DeleteModel
@{
	ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
	<h4>Ingredientes</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.ingrediente.IdIngrediente)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ingrediente.Nombre)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.ingrediente.CantidadDisponible)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ingrediente.UnidadMedida)
		</dd>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ingrediente.PrecioUnitario)
		</dd>
	</dl>
	<form method="post">
		<input type="hidden" asp-for="ingrediente.IdIngrediente" />
		<input type="submit" value="Delete" class="btn btn-danger" />
		<a asp-page="./Index" class="btn btn-primary">Back to List</a>
	</form>
</div>
