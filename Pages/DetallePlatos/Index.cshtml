@page
@model RestoStockWeb.Pages.DetallePlatos.IndexModel
@{
}
@{
	ViewData["Title"] = "Index Ingredientes";
}

<h1>Index Detalle Platos</h1>
<p>

	<a asp-page="Create" class="btn btn-success">Create New</a>`

</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.DetallePlato[0].IdDetalle)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DetallePlato[0].IdPlato)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DetallePlato[0].IngredienteId)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DetallePlato[0].Cantidad)
			</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.DetallePlato)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.IdDetalle)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IdPlato)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IngredienteId)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Cantidad)
				</td>
				<td>
					<a asp-page="./Edit" asp-route-id="@item.IdDetalle" class="btn btn-warning">Edit</a>
					<a asp-page="./Delete" asp-route-id="@item.IdDetalle" class="btn btn-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>